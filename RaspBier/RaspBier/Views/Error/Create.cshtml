@model RaspBier.Models.Error

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Error</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SensorID" class="control-label"></label>
                <input asp-for="SensorID" class="form-control" />
                <span asp-validation-for="SensorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ErrorType" class="control-label"></label>
                </br>
                <select asp-for="ErrorType" asp-items="Html.GetEnumSelectList<ErrorType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="ErrorType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStamp" class="control-label"></label>
                <input asp-for="TimeStamp" class="form-control" />
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
